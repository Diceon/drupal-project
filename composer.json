{
    "name": "irmantasp/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
          "type": "composer",
          "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "irmantasp/docker4drupal",
                "version": "1.x-dev",
                "source": {
                  "url": "https://github.com/irmantasp/docker4drupal.git",
                  "type": "git",
                  "reference": "1.x-dev"
                }
            }
        }
    ],
    "require": {
        "php": ">=7.2",
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.6.7",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/core": "9.0.x-dev",
        "drush/drush": "~10",
        "oomphinc/composer-installers-extender": "^1.1",
        "vlucas/phpdotenv": "^3.6",
        "webflo/drupal-finder": "^1.2.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "irmantasp/docker4drupal": "1.x-dev"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "post-create-project-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredDockerFiles"
        ],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
          "npm-asset",
          "bower-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
              "type:drupal-library",
              "type:npm-asset",
              "type:bower-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "patches": {},
        "patches-ignore": {}
    }
}
