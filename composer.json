{
    "name": "irmantasp/drupal-project",
    "description": "Project template for Drupal 7 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        },
        {
            "type": "package",
            "package": {
                "name": "wodby/docker4drupal",
                "version": "master",
                "source": {
                    "url": "https://github.com/wodby/docker4drupal.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-xml": "*",
        "composer/installers": "^1.2",
        "composer/semver": "^1.4",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/preserve-paths": "^0.1",
        "drupal/adminimal_admin_menu": "^1.9",
        "drupal/adminimal_theme": "^1.24",
        "drupal/composer_autoloader": "^1.0",
        "drupal/diff": "^3.4",
        "drupal/drupal": "~7.0",
        "drupal/features": "^2.11",
        "drupal/panels": "^3.9",
        "drupal/pathauto": "^1.3",
        "drupal/strongarm": "^2.0",
        "drush/drush": "~8.0",
        "symfony/filesystem": "~2.7|^3",
        "webflo/drupal-finder": "^1.0.0"
    },
    "require-dev": {
        "drupal/devel": "^1.6",
        "drupal/devel_debug_log": "^1.2",
        "drupal/examples": "1.x-dev",
        "drupal/node_clone": "^1.0",
        "drupal/realistic_dummy_content": "^2.0",
        "drupal/vardumper": "^1.10",
        "wodby/docker4drupal": "master"
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredDockerFiles",
            "DrupalProject\\composer\\ScriptHandler::removeInternalFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/": ["type:drupal-core"],
            "web/profiles/{$name}/": ["type:drupal-profile"],
            "web/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "web/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "web/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "patches": {
            "cweagans/composer-patches": {
                "Call the preserve paths hooks" : "https://github.com/SebCorbin/composer-patches/commit/1cb9bacba51f8bba0c5f3f322c3bb61e4ceae974.patch"
            }
        },
        "preserve-paths": [
            "web/sites/all/drush",
            "web/sites/all/libraries",
            "web/sites/all/modules/contrib",
            "web/sites/all/modules/custom",
            "web/sites/all/modules/features",
            "web/sites/all/themes/contrib",
            "web/sites/all/themes/custom",
            "web/sites/all/translations",
            "web/sites/default"
        ]
    }
}
